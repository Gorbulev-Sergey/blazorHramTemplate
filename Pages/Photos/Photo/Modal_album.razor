<div id="modal_album" class="modal bg-light text-dark m-0 p-0 align-content-end" tabindex="-1">
    @*Кнопка закрыть диалоговое окно*@
    <button type="button" class="close bg-light text-dark rounded p-2 m-2 position-absolute" style="z-index:10; right:0; top:0" @onclick="скрыть_окно">
        <i class="fas fa-times"></i>
    </button>

    @*Содержимое диалогового окна*@
    <div id="carouselControls" class="carousel slide position-absolute" style="left:50%; top:50%; transform: translate(-50%, -50%);">
        <ol class="carousel-indicators">
            <li data-target="#carouselControls" data-slide-to="0" class="active"></li>
            @for (int i = 1; i < album.images.Count; i++)
            {
                <li data-target="#carouselControls" data-slide-to="@i"></li>
            }
        </ol>
        <div class="carousel-inner">
            @foreach (var photo in album.images)
            {
                if (photo == album.images.ElementAt(0))
                {
                    <div class="carousel-item active text-center">
                        <img class="" src="@photo.url" onload='if ((window.screen.width / window.screen.height > this.width / this.height)) { $(this).addClass("vh-100"); } else { $(this).addClass("vw-100"); }'>
                    </div>
                }
                else
                {
                    <div class="carousel-item text-center">
                        <img class="" src="@photo.url" onload='if (window.screen.width / window.screen.height > this.width / this.height) {$(this).addClass("vh-100"); } else {$(this).addClass("vw-100");  }'>
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
            <div class="text-dark rounded pl-4 pt-5 pr-4 pb-5" style="font-size:1.8em;" title="Назад"><i class="fas fa-chevron-left"></i></div>
        </a>
        <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
            <div class="text-dark rounded pl-4 pt-5 pr-4 pb-5" style="font-size:1.8em;" title="Вперёд"><i class="fas fa-chevron-right"></i></div>
        </a>
    </div>
</div>

@code {
    [Parameter]
    public imageAlbum album { get; set; } = new imageAlbum();

    [Parameter]
    public EventCallback скрыть_окно { get; set; }
}

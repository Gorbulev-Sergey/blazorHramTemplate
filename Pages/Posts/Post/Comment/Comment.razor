
<div class="alert bg-light text-dark d-flex align-items-center justify-content-between mt-2 mb-0">
    <div class="d-flex align-items-center">
        <div class="font-weight-bold mr-2">@comment.userName</div>
        <div>@comment.text</div>
    </div>
    <div class="d-flex align-items-center">
        <div class="text-muted small float-right">@comment.created.ToShortDateString()</div>
        @if (comment.userName==userName)
        {
            <button class="btn btn-link text-danger" @onclick="()=>удалить.InvokeAsync(comment)" title="удалить комментарий"><i class="fas fa-times"></i></button>
        }
    </div>    
</div>

@code {
    [Parameter]
    public string userName { get; set; }

    [Parameter]
    public comment comment { get; set; }

    [Parameter]
    public EventCallback<comment> удалить { get; set; }
}

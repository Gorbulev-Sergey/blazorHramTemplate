<div id="modal_remove_album" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger text-center">Удалить выбранный фотоальбом?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <blazorHramTemplate2.Areas.ControlPanel.Pages.Photos.Photo.Album album="album"></blazorHramTemplate2.Areas.ControlPanel.Pages.Photos.Photo.Album>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-danger" @onclick="удалить_фотоальбом">Удалить</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public imageAlbum album { get; set; }

    [Parameter]
    public EventCallback удалить_фотоальбом { get; set; }
}

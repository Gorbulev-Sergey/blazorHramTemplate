<div class="form-row mb-2">
    <div class="col-9">
        <input class="form-control border-0 bg-light text-dark" @bind-value="image.url" @bind-value:event="oninput" placeholder="Url изображения" />
        <input class="form-control mt-1 form-control-sm border-0 bg-light text-dark" @bind="image.title" placeholder="Название изображения" />
    </div>
    <div class="col-2">
        <img class="card-img" src="@image.url" />
    </div>
    <div class="col-1">
        <div class="d-flex">
            <div class="d-flex flex-column mr-1">
                <button class="btn btn-light text-dark mb-1" @onclick="()=>ImageToTop.InvokeAsync(image)" title="Вверх"><i class="fas fa-angle-up"></i></button>
                <button class="btn btn-light text-dark" @onclick="()=>ImageToDown.InvokeAsync(image)" title="Вниз"><i class="fas fa-angle-down"></i></button>
            </div>
            <button class="btn btn-light text-danger border-danger" @onclick="()=>DeleteImage.InvokeAsync(image)" title="Удалить изображение"><i class="fas fa-trash"></i></button>
        </div>       
    </div>
</div>

@code {
    [Parameter]
    public image image { get; set; }

    [Parameter]
    public EventCallback<image> DeleteImage { get; set; }

    [Parameter]
    public EventCallback<image> ImageToTop { get; set; }

    [Parameter]
    public EventCallback<image> ImageToDown { get; set; }
}
